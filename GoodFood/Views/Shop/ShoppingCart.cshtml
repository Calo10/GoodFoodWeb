<div class="mycart">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <form method="post" enctype="multipart/form-data">
                    <div class="table-responsive">
                        <table class="table listproducts">
                            <thead>
                                <tr>
                                    <td class="text-left">Lista Productos</td>
                                    <td class="text-center">Precio</td>
                                    <td class="text-center">Cantidad</td>
                                    <td class="text-center">Total</td>
                                    <td class="text-center">Eliminar</td>
                                </tr>
                            </thead>
                            <tbody id="tblShoppingCart">
                               
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
            <div class="col-sm-12">
                <div class="buttons">
                    <button class="btn-primary">Eliminar Pedido</button>
                    <button class="btn-primary">Actualizar Pedido</button>
                    <button id="btnContinueShopping" class="btn-primary pull-right">Continuar Comprando</button>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="cartable">
                            <h5>Coupon code</h5>
                            <p>Enter your coupon code if you have one.</p>
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <input name="coupon" placeholder="Enter Coupan code" id="input-coupon" class="form-control" type="text">
                                    <button type="button" class="btn-primary">Apply now</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-sm-4 col-sm-offset-4">
                        <div class="cartable">
                            <h5>Cart Total</h5>
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td class="text-left">Shipping</td>
                                        <td class="text-right">$50.00</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left">Sub Total</td>
                                        <td class="text-right">$290.00</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="text-center">
                                <button type="button" class="btn-primary" onclick="location.href='checkout.html'">Proceed to Checkout</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
