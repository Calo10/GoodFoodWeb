
@{
    ViewData["Title"] = "RegisterUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section CSS{



}
<header style="background-color:transparent;">
    <a href="/">
        <img style="height: 70px; margin-top: 5px;" src="@Url.Content("~/images/white_logo.png")" />
    </a>
    <nav>
        <ul></ul>
    </nav>
</header>
<!-- register start here -->
<div class="register bgimg" style="background-color: #dcdfda;">
    <div class="container">
        <div class="row" style="background-image: url('../images/register_background.png');">
            <div class="col-md-8 col-md-offset-2 BoxShadow" style="margin-top:25px; margin-bottom: 25px; background-color: rgba(214, 212, 203, 0.7098039215686275);">
                <div class="commontop text-left" style="text-align:center; font-family: BrandonGrotesque; color:#434243;">
                    <h4>
                        Crear Cuenta
                    </h4>
                </div>
                <p style="text-align:center; font-family: BrandonGrotesque; color:#434243; font-size: 17px;">¡Bienvenido a Good Food!</p>
                <form id="frmSignUp" method="post" enctype="multipart/form-data">
                    <!--NAME-->
                    <div class="form-group">
                        <label>Nombre *</label>
                        <input id="txtName" type="text" name="username" value="" placeholder="John" class="form-control" />
                    </div>
                    <!--First Lastname-->
                    <div class="form-group">
                        <label>Pimer Apellido *</label>
                        <input id="txtFirstLastName" type="text" name="username" value="" placeholder="Doe" class="form-control" />
                    </div>
                    <!--Second Lastname-->
                    <div class="form-group">
                        <label>Segundo Apellido *</label>
                        <input id="txtSecondLastName" type="text" name="username" value="" placeholder="Smith" class="form-control" />
                    </div>
                    <!--EMAIL-->
                    <div class="form-group">
                        <label>Correo Electrónico *</label>
                        <input id="txtEmail" type="text" name="mail" value="" placeholder="Your Email" class="form-control" />
                    </div>
                    <!--PASSWORD-->
                    <div class="form-group">
                        <label>Password *</label>
                        <input id="txtPassword" type="password" name="password1" value="" placeholder="Password" class="form-control" />
                    </div>
                    <!--CONFIRM PASSWORD-->
                    <div class="form-group">
                        <label>Confirmar Password*</label>
                        <input id="txtConfirmPassword" type="password" name="confirmpassword" value="" placeholder="Password" class="form-control" />
                    </div>
                    <button id="btnRegisterUser" type="submit" class="btn btn-primary" style="background-color:#434243; color:#fff; border-radius: 10px;">REGISTRARSE</button>
                    <div class="links">
                        <input class="checkclass checkbox-inline" type="checkbox">Aceptar Terminos y Condiciones
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section JS{

    <script>
        var routes = {
            SaveUser: '@Url.Action("SaveUser", "Home")'
        };

    </script>

    <script type="text/javascript" src="@Url.Content("~/js/Model/HomeModel.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/View/HomeView.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/Controller/HomeController.js")"></script>

}
<!-- register end here -->
